mv_length = 45
hight_diff = 4

wood_hight = 5
wood_length = 7

hosei = 2


--programs

for i = 1,mv_length,1 do
  turtle.forward()
end

for i = 1,hight_diff,1 do
  turtle.down()
end

sleep(5)

for i = 0,hosei,1 do
  turtle.dig()
  turtle.forward()
end

--cutter

for i = 1,wood_length,1 do
  turtle.dig()
  turtle.forward()
  
  for j = 1,wood_hight,1 do
    turtle.digDown()
    turtle.down()
  end
  
  for k = 1,wood_hight,1 do
    turtle.up()
  end
end

turtle.turnLeft()
turtle.turnLeft()

for i = 1,wood_length,1 do
  turtle.forward()
end

--cutter_end

for i = 0,hosei,1 do
  turtle.dig()
  turtle.forward()
end

for i = 1,hight_diff,1 do
  turtle.up()
end

for i = 1,mv_length,1 do
  turtle.forward()
end

turtle.turnLeft()
turtle.turnLeft()

turtle.select(1)
turtle.dropDown()
